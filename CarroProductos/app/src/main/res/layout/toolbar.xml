<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_shopping_bag"

                android:layout_width="@dimen/imagenToolbar"
                android:layout_height="@dimen/imagenToolbar">

            </ImageView>
            <TextView
                android:text="@string/tituloApp"
                android:id="@+id/tituloToolbar"
                android:textSize="@dimen/tituloApp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margenToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>